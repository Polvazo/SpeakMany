<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:id="@+id/dialogo_buscarchat"
    android:weightSum="2">

    <ImageView
        android:id="@+id/img_dialogoChat"
        android:layout_width="wrap_content"
        android:layout_height="103dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/buscarchat"
        android:layout_weight="0.40" />

    <TextView
        android:id="@+id/txt_1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/ChateaMucho"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/primary_dark"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/txt_2"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:text="@string/ChateMucho_Sub"
        android:gravity="center"
        android:textColor="@color/secondary_text"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.40"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_chat"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/color_boton"
            android:text="@string/buscaChat"
            android:textAllCaps="false"
            android:textColor="@color/primary" />

        <Button
            android:id="@+id/btn_chat_cancelar"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/color_boton"
            android:text="@string/cancelar"
            android:textAllCaps="false"
            android:textColor="@color/primary"/>
    </LinearLayout>

</LinearLayout>
